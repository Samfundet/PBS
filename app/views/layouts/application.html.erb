<!DOCTYPE html>
<html>
    <head>
      <title><%= yield :title %></title>
      <%= stylesheet_link_tag    "application", :media => "all" %>
      <%= javascript_include_tag "application" %>
      <%= csrf_meta_tags %>
    </head>
    <body>
    <h3><%= yield :title %></h3>
    <%= render 'shared/navbar' %>

    <% unless flash.empty? %>
        <% flash.each do |key, val| %>
            <p class ="<%= "#{key}" %> well">
               <%= val %>
            </p>
        <% end %>
    <% end %>
    <%= yield %>

    </body>
</html>
