%ul
  - @posters.each do |t|

    %li
      %div{:class=>'well',:style=>''}
        %div{:class=>'list_text'}
          %div{:class=>'list_buttons'}
            - if t.status==:active
              =link_to '<i class="icon-edit"></i>'.html_safe, edit_poster_path(t), {:class=>"btn", :title=>"Rediger"} if permitted_to? :edit, t
              =link_to '<i class="icon-briefcase"></i>'.html_safe, archive_poster_path(t) , {:method => :put, :class=>"btn", :title=>"Arkiver"} if permitted_to? :archive, t
              =link_to '<i class="icon-remove"></i>'.html_safe, cancel_poster_path(t) , {:method => :put, :class=>"btn", :title=>"Avbestill"} if permitted_to? :cancel, t
              =link_to '<i class="icon-heart"></i>'.html_safe, take_poster_path(t) , {:method => :put, :class=>"btn", :title=>"Ta jobben"} if permitted_to? :take, t
            - if t.status==:archived or t.status==:canceled
              =link_to '<i class="icon-repeat"></i>'.html_safe, restore_poster_path(t), {:method => :put, :class=>"btn", :title=>"Gjenopprett"} if permitted_to? :restore, t
            - if permitted_to? :destroy, t
              =link_to '<i class="icon-warning-sign"></i>'.html_safe, t, {:method=>:delete, :class=>"btn", :title=>"Slett"} 
          %h3
            %a= link_to t.name, t
          %p
            =t.description

