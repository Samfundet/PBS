%p
  Sorter etter: 
  =link_to "sist endret", params.merge(:sort => "updated_at")
  =link_to "navn", params.merge(:sort => "name")
  =link_to "stigende", params.merge(:order => "desc")
  =link_to "synkende", params.merge(:order => "asc")
%ul
  - @posters.each do |t|

    %li
      %span #{t.id}: #{t.name}
      %a= link_to "Vis", t
      %a= link_to "Rediger", :action => "edit", :id => t
      %a= link_to "Slett", t,:confirmation => "Are you sure?", :method => :delete
      - if t.status==:active
        %a= link_to "Arkiver", archive_poster_path(t), :method => :put
        %a= link_to "Avbestill", cancel_poster_path(t), :method => :put
        %a= link_to "Ta jobben", take_poster_path(t), :method => :put
      - if t.status==:archived or t.status==:canceled
        %a= link_to "Gjenopprett", restore_poster_path(t), :method => :put

